{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "sourceMap": true,
        "jsx": "react",
        "experimentalDecorators": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "lib": [
            "es2015",
            "dom"
        ]
    },
    "typeAcquisition": {
        "enable": false
    },
    "include": [
        "src/**/*"
    ]
}